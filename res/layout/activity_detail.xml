<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6"
    android:gravity="top"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/txtCmpNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/txt_cmp_nm"
        android:textColorHint="#778899" />

    <EditText
        android:id="@+id/txtDptNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtCmpNm"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/txt_dpt_nm"
        android:textColorHint="#778899" />

    <EditText
        android:id="@+id/txtPrsNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDptNm"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_prs_nm"
        android:inputType="textPersonName"
        android:textColorHint="#778899" />

    <EditText
        android:id="@+id/txtTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtMail"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_tel_num"
        android:inputType="phone"
        android:textColorHint="#778899" />

    <EditText
        android:id="@+id/txtMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtPrsKnNm"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#778899" />

    <EditText
        android:id="@+id/txtPrsKnNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtPrsNm"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_prs_kn_nm"
        android:textColorHint="#778899" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtTel"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="11dp" >

        <RadioGroup
            android:id="@+id/rdgSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rdbMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/txt_sex_man" />

            <RadioButton
                android:id="@+id/rdbWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_sex_woman" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/btnCnl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_undo"
            android:text="@string/btn_cncl"
            android:textColor="#00ffff" />

        <Button
            android:id="@+id/btnDlt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_discard"
            android:text="@string/btn_dlt"
            android:textColor="#00ffff" />

        <Button
            android:id="@+id/btnUpd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_save"
            android:text="@string/btn_sv"
            android:textColor="#00ffff" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:ems="10"
        android:hint="@string/txt_memo"
        android:textColorHint="#778899" >

        <requestFocus />
    </EditText>

</RelativeLayout>